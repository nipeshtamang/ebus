{
  "name": "ebusewa",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "services/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:client\" \"npm run dev:admin\" \"npm run dev:superadmin\"",
    "dev:api": "npm run dev --workspace=@ebusewa/api",
    "dev:client": "npm run dev --workspace=@ebusewa/client",
    "dev:admin": "npm run dev --workspace=@ebusewa/admin",
    "dev:superadmin": "npm run dev --workspace=@ebusewa/superadmin",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "start": "node startup.js",
    "start:webuzo": "node startup.js",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs ebus-api",
    "pm2:monit": "pm2 monit",
    "test:connection": "node test-connection.js"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "prettier": "^3.0.0",
    "process": "^0.11.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "file-saver": "^2.0.5",
    "puppeteer": "^24.15.0"
  }
}
